<Page
    x:Class="CustomVisionCompanion.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Template10.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <controls:PageHeader Frame="{x:Bind Frame}" Text="Settings">
            <controls:PageHeader.PrimaryCommands>
                <AppBarButton
                    Click="CustomVisionWebSite_Click"
                    Icon="Globe"
                    Label="Custom Vision" />
            </controls:PageHeader.PrimaryCommands>
        </controls:PageHeader>

        <ScrollViewer
            Grid.Row="1"
            Margin="12"
            Padding="0,0,12,0">
            <StackPanel>
                <TextBox
                    x:Name="TrainingKeyTextBox"
                    Margin="5"
                    Header="Training Key:" />
                <TextBox
                    x:Name="PredictionKeyTextBox"
                    Margin="5"
                    Header="Prediction Key:" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
